    <div>
        @RenderBody()
    </div>

    <div style="clear: both; margin-bottom: 10px;"></div>

    <div class="footer">
        <p>Email : webtesting@gmail.com</p>
        <p>Address: HaNoi, VietNam</p>
        <h5>&copy; Copyright 2021. webtesting.com</h5>
    </div>

</body>
</html>
